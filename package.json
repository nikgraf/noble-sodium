{
  "name": "@serenity-kit/noble-sodium",
  "version": "0.2.0",
  "description": "TypeScript library offering a Libsodium-compatible API built on top of Noble packages",
  "repository": "https://github.com/serenity-kit/noble-sodium",
  "type": "module",
  "scripts": {
    "test": "vitest --typecheck",
    "clean": "rm -rf ./dist/*",
    "build": "pnpm run clean && tsc"
  },
  "keywords": [
    "noble",
    "libsodium",
    "crypto",
    "cryptography"
  ],
  "files": [
    "package.json",
    "README.md",
    "LICENSE",
    "src/**/*.ts",
    "dist/**/*.js",
    "dist/**/*.js.map",
    "dist/**/*.d.ts",
    "dist/**/*.d.ts.map"
  ],
  "exports": {
    ".": "./dist/index.js",
    "./wrappers": "./dist/wrappers.js"
  },
  "sideEffects": false,
  "author": "Naisho GmbH",
  "license": "MIT",
  "packageManager": "pnpm@10.6.2",
  "dependencies": {
    "@noble/ciphers": "^1.2.1",
    "@noble/curves": "^1.8.2",
    "@noble/hashes": "^1.7.2"
  },
  "devDependencies": {
    "@types/libsodium-wrappers": "^0.7.14",
    "libsodium-wrappers": "^0.7.15",
    "prettier": "^3.5.3",
    "typescript": "^5.8.3",
    "vitest": "^3.1.1"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  }
}
